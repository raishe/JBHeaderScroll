<?xml version="1.0" encoding="utf-8"?>
<manifest package="info.johannblake.jbheaderscrollsample"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ListViewDemoActivity"
            android:label="@string/title_activity_listview_demo">
        </activity>
        <activity
            android:name=".ScrollViewDemoActivity"
            android:label="@string/title_activity_scrollview_demo">
        </activity>
        <activity
            android:name=".WebViewDemoActivity"
            android:label="@string/title_activity_webview_demo">
        </activity>
        <activity
            android:name=".NestedHeadersDemoActivity"
            android:label="@string/title_activity_nestedheaders_demo">
        </activity>
    </application>

</manifest>
